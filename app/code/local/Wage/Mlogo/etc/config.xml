<?xml version="1.0"?>
<config>
    <modules>
        <Wage_Mlogo>
            <version>0.1.0</version>
        </Wage_Mlogo>
    </modules>
    <admin>
        <routers>
			<mlogo>
				<use>admin</use>
				<args>
					<module>Wage_Mlogo</module>
					<frontName>mlogo</frontName>
				</args>
			</mlogo>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<mlogo module="mlogo">
				<title>Manage logo</title>
				<sort_order>71</sort_order>
                <action>mlogo/adminhtml_mlogo</action>               
			</mlogo>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Wage_Mlogo>
							<title>Mlogo Module</title>
							<sort_order>10</sort_order>
						</Wage_Mlogo>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<mlogo>
					<file>mlogo.xml</file>
				</mlogo>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <mlogo>
                <class>Wage_Mlogo_Model</class>
                <resourceModel>mlogo_mysql4</resourceModel>
            </mlogo>
            <mlogo_mysql4>
                <class>Wage_Mlogo_Model_Mysql4</class>
                <entities>
                    <mlogo>
                        <table>mlogo</table>
                    </mlogo>
                </entities>
            </mlogo_mysql4>
        </models>
        <resources>
            <mlogo_setup>
                <setup>
                    <module>Wage_Mlogo</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mlogo_setup>
            <mlogo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mlogo_write>
            <mlogo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mlogo_read>
        </resources>
        <blocks>
            <mlogo>
                <class>Wage_Mlogo_Block</class>
            </mlogo>
            <page>
                <rewrite>
                    <html_header>Wage_Mlogo_Block_Page_Html_Header</html_header>
                </rewrite>
            </page>
        </blocks>
        <helpers>
            <mlogo>
                <class>Wage_Mlogo_Helper</class>
            </mlogo>
        </helpers>
    </global>
</config>